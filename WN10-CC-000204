# Define the registry path
$regPath = "HKLM:\SOFTWARE\Policies\Microsoft\Windows\DataCollection"

# Ensure the registry path exists
if (-not (Test-Path $regPath)) {
    New-Item -Path $regPath -Force | Out-Null
}

# Set the 'LimitEnhancedDiagnosticDataWindowsAnalytics' DWORD value to 1
Set-ItemProperty -Path $regPath -Name "LimitEnhancedDiagnosticDataWindowsAnalytics" -Value 1 -Type DWord

# Confirmation output
Write-Output "Successfully set 'LimitEnhancedDiagnosticDataWindowsAnalytics' to 1 under $regPath"
