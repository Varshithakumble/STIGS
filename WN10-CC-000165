# Define the registry path
$regPath = "HKLM:\SOFTWARE\Policies\Microsoft\Windows NT\Rpc"

# Ensure the registry path exists
if (-not (Test-Path $regPath)) {
    New-Item -Path $regPath -Force | Out-Null
}

# Set the 'RestrictRemoteClients' DWORD value to 1
Set-ItemProperty -Path $regPath -Name "RestrictRemoteClients" -Value 1 -Type DWord

# Confirmation output
Write-Output "Successfully set 'RestrictRemoteClients' to 1 under $regPath"

